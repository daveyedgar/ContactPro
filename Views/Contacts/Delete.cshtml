@model ContactPro.Models.Contact
@using ContactPro.Services.Interfaces
@using ContactPro.Services
@using ContactPro.Models

@inject IImageService ImageService

@{
    ViewData["Title"] = "Delete";
}


<div class="row d-flex justify-content-center">

    <div class="col-11 col-md-8">

        <h1 class="mb-3 text-dark">Delete Contact</h1>

        <h3 class="mb-3 text-dark">Are you sure you want to delete this contact?</h3>
        <hr />
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-12 col-md-3 square-img-container">
                    @if (Model.ImageData == null)
                    {
                        <img class="square-img rounded-start img-fluid" src="~/img/DefaultContactImage.png">
                    }
                    else
                    {
                        <img class="square-img rounded-start img-fluid" src="@ImageService.ConvertByteArrayToFileAsync(Model.ImageData!, Model.ImageType!)">
                    }

                </div>
                <div class="col-12 col-md-6">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => Model.FullName)</h5>
                        <address class="card-text">
                            @Html.DisplayFor(modelItem => Model.Address1)<br>
                            @Html.DisplayFor(modelItem => Model.Address2)<br>

                            @Html.DisplayFor(modelItem => Model.City), @Html.DisplayFor(modelItem => Model.States)  @Html.DisplayFor(modelItem => Model.ZipCode)
                        </address>
                        <div class="card-text">
                            <span class="fw-bold me-2">Phone:</span>@String.Format("{0: (###) ###-####}", Model.PhoneNumber);
                        </div>
                        <div class="card-text">
                            <span class="fw-bold me-2">Email:</span>@Html.DisplayFor(modelItem => Model.Email)
                        </div>
                        <div class="fs-4 mt-4">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
