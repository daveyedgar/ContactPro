@model ContactPro.Models.Category

@{
    ViewData["Title"] = "Edit";
}



<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Edit Category</h2>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AppUserId" />

            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-end mt-2 ">
                <a asp-controller="Categories" asp-action="Index" class="btn rounded-pill btn-primary me-2">Cancel</a>
                <input type="submit" value="Save" class="btn btn-primary rounded-pill btnlinks" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
