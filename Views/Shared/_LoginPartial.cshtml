@using Microsoft.AspNetCore.Identity
@using ContactPro.Models
@inject SignInManager<AppUser> SignInManager

@inject UserManager<AppUser> UserManager


@{
    AppUser user = await UserManager.GetUserAsync(User);
}


<ul class="navbar-nav me-5">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Hello,&nbsp; @user.FirstName
            </a>
            <ul class="dropdown-menu">
                <li><a class="nav-link ms-3" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account</a></li>
                <li>
                    <form class="form-inline ms-3" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link text-dark">Logout</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-primary rounded-pill btnlinks me-2" asp-area="Identity" asp-page="/Account/Login">Demo User</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-primary rounded-pill btnlinks me-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-primary rounded-pill btnlinks me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
